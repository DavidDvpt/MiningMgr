<UserControl x:Class="WpfApp.UserControls.UcCbxModeles"
             Name="modeleList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Name="spModeles" Orientation="Horizontal" Style="{Binding ElementName=cbxModeles, Path=SpStyle}">
            <TextBox Name="lbModeles" Text="{Binding ElementName=modeleList, Path=LabelTexte}" Width="100"/>
            <ComboBox Name="cbxModeles" ItemsSource="{Binding ElementName=modeleList, Path=Modeles, Mode=TwoWay}"
                              DisplayMemberPath="Nom"
                              SelectedItem="{Binding ElementName=modeleList, Path=Selected}" Width="150"/>
        </StackPanel>
    </Grid>
</UserControl>
